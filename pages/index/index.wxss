/**index.wxss**/

page {
  background: #3f3c51;
}

.header {
  display: block;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 307px;
}
.header .inner {
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 160px;
  height: 160px;
  margin-top: -80px;
  margin-left: -80px;
}
.header .avatar {
  display: block;
  width: 96px;
  height: 96px;
  margin: 0px auto;
  border: 5px solid #4e4b66;
  border-radius: 50%;
  background: #4e4b66;
}
.header .userinfo {
  display: block;
  width: 96px;
  height: 36px;
  color: #bab9c9;
  font-size: 14px;
  line-height: 36px;
  margin-top: 13px;
  margin-left: auto;
  margin-right: auto;
  background: #4e4b66;
}
.header .nick {
  display: block;
  height: 36px;
  line-height: 36px;
  text-align: center;
  margin-top: 13px;
}
.header .nick .gender {
  display: inline-block;
  width: 24px;
  height: 24px;
  vertical-align: middle;
  margin-right: 5px;
}
.header .text {
  display: inline-block;
  color: #bab9c9;
  font-size: 21px;
  vertical-align: middle;
}

.visiter {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 205px;
  height: 82px;
  padding: 10px 15px;
}
.visiter .caption {
  display: block;
  height: 24px;
  color: #969696;
  font-size: 12px;
  line-height: 24px;
  padding: 0px 0px 0px 5px;
}
.visiter .repeater {
  display: block;
  height: 48px;
  padding-top: 5px;
}
.visiter .repeater .list {
  overflow: hidden;
  height: 48px;
  margin-right: 36px;
}
.visiter .repeater .list .item {
  float: left;
  display: block;
  width: 48px;
  height: 48px;
  margin-right: 10px;
  border-radius: 50%;
}
.visiter .repeater .more {
  float: right;
  display: block;
  width: 24px;
  height: 24px;
  padding: 12px 0px;
  margin: 0px;
}

.summary {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 115px;
  height: 90px;
  text-align: center;
  padding: 0px 15px;
  border-radius: 5px;
}
.summary .large {
  display: block;
  height: 36px;
  color: #edf1f2;
  font-size: 15px;
  line-height: 36px;
  padding-bottom: 10px;
}
.summary .link {
  display: block;
  height: 44px;
  color: #f9645e;
  font-size: 15px;
  line-height: 44px;
  border: 1px solid #f9645e;
  border-radius: 22px;
}

.actions {
  display: block;
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 95px;
  padding: 15px 15px 5px 15px;
}
.actions .button {
  display: block;
  height: 44px;
  color: #ffffff;
  font-size: 15px;
  font-weight: bold;
  line-height: 44px;
  border-radius: 22px;
  background:#f9645e;
}
.actions .button:active {
  background: #dd4645;
}
.actions .link {
  display: block;
  height: 36px;
  color: #878694;
  font-size: 14px;
  line-height: 36px;
  margin-top: 10px;
}

@media screen and (min-width: 321px) {  

  .visiter {
    bottom: 215px;
    padding: 20px 30px;
  }
  .summary {
    bottom: 135px;
    padding: 0px 30px;
  }
  .summary .large {
    height: 48px;
    line-height: 48px;
  }
  .actions {
    padding: 30px 30px 10px 30px;
  }
}  