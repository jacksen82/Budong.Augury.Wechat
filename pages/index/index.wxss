/**index.wxss**/

page {
  background: #3f3c51;
}

.header {
  display: block;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 200px;
}
.header .inner {
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 160px;
  height: 160px;
  margin-top: -80px;
  margin-left: -80px;
}
.header .avatar {
  display: block;
  width: 96px;
  height: 96px;
  margin: 0px auto;
  border: 5px solid #4e4b66;
  border-radius: 50%;
  background: #4e4b66;
}
.header .userinfo {
  display: block;
  width: 96px;
  height: 36px;
  color: #bab9c9;
  font-size: 14px;
  line-height: 36px;
  margin-top: 13px;
  margin-left: auto;
  margin-right: auto;
  background: #4e4b66;
}
.header .nick {
  display: block;
  height: 24px;
  line-height: 24px;
  text-align: center;
  margin-top: 15px;
  margin-right: 10px;
}
.header .nick .gender {
  display: inline-block;
  width: 24px;
  height: 24px;
  vertical-align: middle;
  margin-right: 5px;
}
.header .text {
  display: inline-block;
  color: #bab9c9;
  font-size: 21px;
  vertical-align: middle;
}

.bodyer {
  display: block;
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
}
.bodyer .start {
  display: block;
  height: 44px;
  color: #ffffff;
  font-size: 15px;
  font-weight: bold;
  line-height: 44px;
  margin: 0px 25px;
  border-radius: 22px;
  background:#f9645e;
}
.bodyer .share {
  display: block;
  height: 44px;
  color: #f9645e;
  font-size: 15px;
  line-height: 44px;
  margin: 20px 25px;
  border: 1px solid #f9645e;
  border-radius: 22px;
}
.bodyer .friends {
  display: block;
  overflow: hidden;
  height: 48px;
  text-align: center;
  padding: 0px 20px;
}
.bodyer .friends .item {
  display: inline-block;
  width: 48px;
  height: 48px;
  margin: 0px 5px;
  border-radius: 50%;
}
.bodyer .more {
  display: block;
  color: #bab9c9;
  font-size: 12px;
  line-height: 25px;
  padding: 15px 0px;
}

@media screen and (min-width: 321px) {  

  .header {
    bottom: 200px;
  }
  .bodyer .start {
    margin: 0px 30px;
  }
  .bodyer .share {
    margin: 20px 30px;
  }
}  