/**index.wxss**/

page {
  background: #414246;
}

.recorder {
  display: block;
  position: absolute;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 0px;
  background: #414246;
}
.recorder .button {
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 64px;
  height: 64px;
  margin-top:-96px;
  margin-left: -32px;
  border-radius: 50%;
  background: #e4f1f4;
}

.tabs {
  display: block;
  position: absolute;
  left: 0px;
  right: 0px;
  bottom: 0px;
  height: 64px;
  border-top: 1px solid #26282c;
  background: #2e3034;
}
.tabs .item {
  display: block;
  width: 50%;
  height: 64px;
  color: #ffffff;
  font-size: 15px;
  line-height: 64px;
  text-align: center;
}
.tabs .item.left { float: left; }
.tabs .item.right { float: right; }