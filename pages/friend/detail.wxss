/* pages/friend/result.wxss */

.container {
  display: block;
  padding: 0px 15px;
}

.header {
  display: block;
  margin: 35px 0px;
}
.header .inner {
  display: block;
}
.header .avatar {
  display: block;
  width: 64px;
  height: 64px;
  margin: 0px auto;
  border: 6px solid rgba(0,0,0,.1);
  border-radius: 50%;
  background: rgba(0,0,0,.1);
}
.header .nick {
  display: block;
  height: 24px;
  line-height: 24px;
  text-align: center;
  margin-top: 10px;
  margin-right: 10px;
  margin-bottom: 25px;
}

.character {
  display: block;
  padding: 12px;
  border-radius: 7px;
  background: #f9f9f9;
}

.character .line {
  display: block;
  height: 0px;
  border-top: 1px solid #dcdcdc;
  border-bottom: 1px solid #ffffff;
}

.character .title {
  display: block;
}
.character .title em {
  display: block;
  height: 44px;
  color: #ffffff;
  font-size: 19px;
  font-weight: bold;
  text-align: center;
  line-height: 44px;
  border-radius: 7px;
}
.character .title dfn {
  display: block;
  color: #49465a;
  font-size: 14px;
  margin-top: 12px;
  margin-bottom: 12px;
}

.character .goodbad {
  display: block;
  padding: 12px 0px;
}
.character .goodbad .icon {
  float: left;
  display: block;
  width: 64px;
  height: 64px;
  margin: 34px 15px;
}
.character .goodbad .itemlist {
  display: block;
  min-height: 64px;
  margin-left: 104px;
}
.character .goodbad .itemlist .item {
  display: block;
  font-size: 14px;
  line-height: 22px;
}
.character .goodbad .itemlist .item:before {
  content: "";
  display: inline-block;
  width: 6px;
  height: 6px;
  vertical-align: middle;
  margin-right: 9px;
  border-radius: 50%;
}
.character .goodbad .itemlist .item.good {
  color: #49465a;
}
.character .goodbad .itemlist .item.good:before {
  background: #49465a;
}
.character .goodbad .itemlist .item.bad {
  color: #f9645e;
}
.character .goodbad .itemlist .item.bad:before {
  background: #f9645e;
}

.character .review {
  display: block;
  padding: 5px 12px;
  border: 1px solid #dcdcdc;
  border-radius: 7px;
  background: #ffffff;
}
.character .review .row {
  display: block;
  min-height: 40px;
  border-bottom: 1px dotted #dcdcdc;
}
.character .review .row:last-child {
  border-bottom: 0px;
}
.character .review .row .label {
  float: left;
  display: block;
  width: 56px;
  height: 20px;
  color: #838193;
  font-size: 14px;
  line-height:20px;
  padding: 10px 0px;
}
.character .review .row .text {
  display: block;
  color: #49465a;
  font-size: 14px;
  line-height: 20px;
  padding: 10px 0px;
  margin-left: 66px;
}

.actions {
  display: block;
  height: 40px;
  text-align: center;
  margin-top: 15px;
}
.actions .appraise {
  float: left;
  display: block;
  height: 38px;
}
.actions .appraise .link {
  float: left;
  display: block;
  height: 40px;
  color: #49465a;
  font-size: 14px;
  line-height: 40px;
  margin-right: 12px;
  border-radius: 20px;
  background: #f3f3f3;
}
.actions .appraise .link.praise {
  color: #ffffff;
  background: #f9645e;
}
.actions .appraise .link small {
  color: rgba(0,0,0,.5);
  font-size: 12px;
  margin-left: 5px;
}
.actions .share {
  float: right;
  display: block;
  height: 40px;
}
.actions .share .link {
  float: right;
  display: block;
  height: 40px;
  color: #49465a;
  font-size: 14px;
  line-height: 40px;
  border-radius: 20px;
  background: #f3f3f3;
}

.comments {
  display: block;
  padding: 5px 0px;
}
.comments .item {
  display: block;
  height: 68px;
  border-radius: 48px;
}
.comments .item .avatar {
  float: left;
  display: block;
  width: 48px;
  height: 48px;
  margin: 10px 0px;
  border-radius: 50%;
}
.comments .item .intro {
  display: block;
  overflow: hidden;
  height: 48px;
  padding: 10px 0px;
  margin-left: 64px;
  border-bottom: 1px solid #49465a;
}
.comments .item .intro .appraise {
  float: right;
  display: block;
  width: 48px;
  height: 30px;
  font-size: 12px;
  line-height: 28px;
  text-align: center;
  padding: 0px;
  margin: 10px 0px;
  border-radius: 16px;
}
.comments .item .intro .appraise.right {
  color: #f9645e;
  border: 1px solid #f9645e;
}
.comments .item .intro .appraise.wrrong {
  color: #f3f3f3;
  border: 1px solid #f3f3f3;
}
.comments .item .intro em {
  display: block;
  overflow: hidden;
  color: #bab9c9;
  height: 32px;
  font-size: 15px;
  font-weight: bold;
  text-overflow:ellipsis;
  white-space:nowrap;
  line-height: 24px;
  margin-right: 82px;
}
.comments .item .intro dfn {
  display: block;
  color: #838193;
  height: 16px;
  font-size: 12px;
  line-height: 16px;
  margin-right: 82px;
}

.comments .more {
  display: block;
  height: 50px;
  color: #838193;
  font-size: 12px;
  line-height: 50px;
  text-align: center;
}

@media screen and (min-width: 321px) {  

  .container .outer {
    padding: 0px 45px;
  }
}  

