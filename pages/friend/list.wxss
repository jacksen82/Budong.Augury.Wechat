/* pages/friend/list.wxss */

.friends {
  padding: 0px 12px 0px 20px;
}
.friends .item {
  display: block;
  height: 68px;
  border-radius: 48px;
}
.friends .item .avatar {
  float: left;
  display: block;
  width: 48px;
  height: 48px;
  margin: 10px 0px;
  border-radius: 50%;
}
.friends .item .intro {
  display: block;
  overflow: hidden;
  height: 48px;
  padding: 10px 0px;
  margin-left: 64px;
  border-bottom: 1px solid #49465a;
}
.friends .item .intro .link {
  float: right;
  display: block;
  width: 72px;
  height: 30px;
  color: #f9645e;
  font-size: 12px;
  line-height: 28px;
  text-align: center;
  padding: 0px;
  margin: 10px 0px;
  border: 1px solid #f9645e;
  border-radius: 16px;
}
.friends .item .intro .tip {
  float: right;
  display: block;
  width: 72px;
  height: 32px;
  color: #838193;
  font-size: 24px;
  line-height: 14px;
  text-align: center;
  padding: 0px;
  margin: 10px 0px;
}
.friends .item .intro .nick {
  display: block;
  overflow: hidden;
  color: #bab9c9;
  height: 32px;
  font-size: 15px;
  font-weight: bold;
  text-overflow:ellipsis;
  white-space:nowrap;
  line-height: 24px;
  margin-right: 82px;
}
.friends .item .intro .desc {
  display: block;
  color: #838193;
  height: 16px;
  font-size: 12px;
  line-height: 16px;
  margin-right: 82px;
}
.friends .item .intro .desc .type {
  display: inline-block;
  overflow: hidden;
  max-width: 72px;
  height: 16px;
  color: #838193;
  line-height: 16px;
  text-overflow:ellipsis;
  white-space:nowrap;
  vertical-align: middle;
  padding: 0px 5px;
  margin-right: 7px;
  border-radius: 12px;
  border: 1px solid #838193;
}
.friends .item .intro .desc .time {
  display: inline-block;
  height: 16px;
  color: #838193;
  line-height: 16px;
  vertical-align: middle;
}

.friends .more {
  display: block;
  height: 50px;
  color: #838193;
  font-size: 12px;
  line-height: 50px;
  text-align: center;
}